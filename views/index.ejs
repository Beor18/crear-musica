<link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

<div class="container">
    <form action="/" method="post">
        <p>Ejemplo: c4 d4 e4 f4 g4 a4 b4 c5 (Escala de notas en ingles)</p>
        <strong>
        Ingrese Notas
    </strong>
        <input type="text" name="notas"><br><br>
        <strong> Ingrese Patterns</strong>
        <input type="text" name="patterns">
        <br><br>
        <input type="submit" value="Crear archivo MIDI" class="btn btn-success">
    </form>

    <div class="table-responsive" style="padding-top:20px; padding-bottom:20px;">
        <table class=" table table-bordered">
            <thead>
                <tr>
                    <th>Notas</th>
                    <th>Patterns</th>
                    <th style="text-align:center !important;">Link De Descarga</th>
                </tr>
            </thead>
            <tbody>
                <% if(musica.length>0){%>
                    <% for(var i=0; i<musica.length; i++) {%>
                        <tr>
                            <td>
                                <%= musica[i].notes %>
                            </td>
                            <td>
                                <%= musica[i].pattern %>
                            </td>
                            <td style="text-align:center !important;">
                                <a href="<%= musica[i].arch %>" type="button" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-eye-open"></span> Descargar Archivo</a>
                            </td>
                        </tr>
                        <% } %>
                            <%} else {%>
                                <p class="alert alert-warning">No hay Registro!</p>
                                <% } %>
            </tbody>
        </table>
    </div>
</div>